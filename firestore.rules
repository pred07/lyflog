rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Allow reading/writing own user document
      allow read, write: if isOwner(userId);
      // Allow creation if auth uid matches document id
      allow create: if isOwner(userId);
    }
    
    // Daily logs collection
    match /daily_logs/{logId} {
      // Allow users to read/write/delete their own logs
      allow read, list, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || resource == null);
      // Allow creation if the new document's userId matches auth uid
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow updates if userId doesn't change
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid && request.resource.data.userId == request.auth.uid;
    }
  }
}
